<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SR</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
        :root {
            --html-color: #2F3645 ;
            --body-color: #939185;
            --heading-color:#E6B9A6;
            --defaultfont-size: 1rem;
            --defaultText-color:#EEEDEB;
        }

        html{
            background-color: var(--html-color);
        }

        body{
            font-family: "Roboto", sans-serif;
            background-color: var(--body-color);
            width: 900px;
            height: 1000px;
            margin: 0 auto;
            border-radius: 5px;
            font-size: var(--defaultfont-size);
        }


        h3{
            font-size: 2rem;
            color: var(--heading-color);
            padding: 10px;
            border-bottom: 2px solid var(--heading-color);
            text-align:justify;
            
        }        
        .addData{
            font-weight: 400;   
            padding: 5px;
            margin: 10px;
            border-radius: 3px;

        }

        .addData label , .addData input{
            display: block;
        }

        .addData input{
            width: 50%;
        }
        .addData-submitButton{
            border-radius: 3px;
            padding: 5px;
            background-color: rgb(118, 156, 227);
            color: var(--defaultText-color);
            border-style: none;
            margin-left: 40%;
        }


        .homebutton{
            background-color: #508D4E;
            color: var(--defaultText-color);
            border-radius: 3px;
            padding: 5px;
            border-style: none;
            margin-left: 80%;
        }

    </style>
</head>

<body>

<h3>Edit Student Data</h3>

<form action="/" method="get">
    <button class="homebutton">Back to Home</button>
</form>

<% rows.forEach(function(row) { %>
<form action="/editUser/<%= row.id %>" method="post" autocomplete="off">
    <div class="addData">
        <label for="Name">Name</label>
        <input type="text" name="Name" value="<%= row.name %>">
    </div>
    <div class="addData">
        <label for="Age">Age</label>
        <input type="number" name="Age"  value="<%= row.age %>">
    </div>
    <div class="addData">
        <label for="City">City</label>
        <input type="text" name="City"  value="<%= row.city %>">
    </div>   
    <div class="addData-submit">
        <button  class="addData-submitButton"type="submit">Update Details</button>
    </div>
</form>

<% }); %>

</body>
</html>